<!DOCTYPE html>
<html>
    <head>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <style>
            h1{
                text-align: center;
                border: 3px solid green;
            }
            .title{
                text-align: center;
            }
            .group{
                margin: 5px;
                padding: 15px;
                border: 2px solid black;
                border-radius: 25px;
            }
            .todo{
                border: 2px solid green;
                border-radius: 25px;
            }
            .child{
                margin-left: 10px;
            }
            .empty{
                border: none;
            }
        </style>
        <script>
            function makeGroup(group){
                // append group info
                $("#grid").append(`
                <div class="group container" id="group1">
                    <div class="row title" id="title1">
                        <span><h3>Group 1</h3></span>
                    </div>
                    <div class="row" id="parents1">
                    </div>
                </div>`);
                // populate todos
                makeTodos(null);
            }
            function makeTodos(todos){
                // append todo information into groups
                // first the parents
                $('#parents1').append(`
                <div class="todo col-sm" id="todo1">
                    1. Todo Item
                    <ul>
                        <li>Description and other fields</li>
                    </ul>
                </div>
                <div class="todo col-sm" id="todo2">
                    2. Todo Item
                    <ul>
                        <li>Description and other fields</li>
                    </ul>
                </div>
                <div class="todo col-sm" id="todo3">
                    3. Todo Item
                    <ul>
                        <li>Description and other fields</li>
                    </ul>
                </div>
                `);
                // then the children
                $("#group1").append(`
                <div class="row" id="children">
                    <div class="todo child col-sm" id="todo1a">
                        1a. Subtask
                        <ul>
                            <li>Description and other fields</li>
                        </ul>
                    </div>
                    <div class="empty todo child col-sm" id="todo2a">
                    </div>
                    <div class="todo child col-sm" id="todo3a">
                        3a. Subtask
                        <ul>
                            <li>Description and other fields</li>
                        </ul>
                    </div>
                </div>
                `)
            }
            $(document).ready( function(){
                makeGroup();
            });
        </script>
    </head>
    <body>
        <h1>Prototype:</h1>
        <div class="container" id="grid">
        </div>
    </body>
</html>